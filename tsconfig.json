{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    },
    "moduleResolution": "node16",
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "types": ["./config/jsx.d.ts"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "jsxImportSource": "react"
  },
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src/**/*",
    "*.astro",
    ".astro/types.d.ts",
    "**/*",
    "components.json"
  ],
  "exclude": ["node_modules", "dist"]
}
