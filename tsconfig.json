{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "node16",
    "jsx": "preserve",
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "types": ["./jsx.d.ts"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./"
  },
  "extends": "astro/tsconfigs/strict",
  "include": ["src/**/*", "*.astro", ".astro/types.d.ts", "**/*"],
  "exclude": ["node_modules", "dist"]
}
