---
interface Props {
  date: Date;
}

const { date } = Astro.props;

// Ensure a proper Date object
const safeDate = new Date(date);

const formatOptions: Intl.DateTimeFormatOptions = {
  year: "numeric",
  month: "long",
  day: "numeric",
  timeZone: "UTC",
};
---

<time datetime={safeDate.toISOString()}>
  {safeDate.toLocaleDateString("en-US", formatOptions)}
</time>
