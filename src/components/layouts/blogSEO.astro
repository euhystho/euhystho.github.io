---
import { SITE_TITLE } from "../../utils/consts";
interface Props {
  title: string;
  //Possible Bug here depending on how Date is formatted:
  date: Date;
  modDate?: Date;
  image?: string;
  isProject: boolean;
}
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, date, modDate, image, isProject } = Astro.props;

const projectJSONLD = isProject && {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": { canonicalURL },
  },
  headline: { title },
  image: { image },
  author: {
    "@type": "Person",
    name: { SITE_TITLE },
  },
  datePublished: { date },
};
const writingJSONLD = !isProject && {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": { canonicalURL },
  },
  headline: { title },
  author: {
    "@type": "Person",
    name: { SITE_TITLE },
  },
  datePublished: { date },
  dateModified: { modDate },
};
---

{
  projectJSONLD && (
    <script
      type="application/ld+json"
      set:html={JSON.stringify(projectJSONLD)}
    />
  )
}

{
  writingJSONLD && (
    <script
      type="application/ld+json"
      set:html={JSON.stringify(writingJSONLD)}
    />
  )
}
