---
import "../../styles/global.css";
import { SITE_AUTHOR, SITE_DESCRIPTION } from "../../utils/consts";
import BaseHead from "../common/BaseHead.astro";
import Header from "../common/Header.astro";
import Footer from "../common/Footer.astro";
interface Props {
  title?: string;
  description?: string;
  image?: string;
  alt?: string;
}
const {
  title = SITE_AUTHOR,
  description = SITE_DESCRIPTION,
  image,
  alt = "",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} alt={alt} />
  </head>
  <body class="bg-background">
    <div class="site">
      <Header />
      <main class="m-4 flex flex-col items-center justify-center">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
