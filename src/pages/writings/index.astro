---
import { getCollection } from "astro:content";
const posts = await getCollection("writings");
import MainLayout from "../../components/layouts/main_layout.astro";
---

<MainLayout>
  {
    posts.length === 0 ? (
      <div class="flex min-h-full flex-col items-center justify-center">
        <h2 class="text-text mb-4 text-center">🧑🏻‍💻 Hello Everyone!</h2>
        <p class="text-text text-center text-3xl">
          Unfortunately, this page is still currently in maintenance, <br />{" "}
          please check again next time!
        </p>
      </div>
    ) : (
      <ul>
        {posts.map((post) => (
          <li>
            <a href={`/writings/${post.id}`}>
              <h2>{post.data.title}</h2>
            </a>
          </li>
        ))}
      </ul>
    )
  }
</MainLayout>
