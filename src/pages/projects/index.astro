---
import { getCollection } from "astro:content";
const posts = await getCollection("projects");
import MainLayout from "../../components/layouts/main_layout.astro";
---

<MainLayout
  title="Projects - Eugene Thompson"
  description="Explore my technical projects spanning web development, software engineering, and data science."
  alt="Projects Page"
>
  {
    posts.length === 0 ? (
      <div class="min-h-full">
        <h2 class="text-text mb-4 text-center">🧑🏻‍💻 Hello Everyone!</h2>
        <p class="text-text text-center text-3xl">
          Unfortunately, this page is still currently in maintenance, <br />{" "}
          please check again next time!
        </p>
      </div>
    ) : (
      <ul class="flex flex-col items-center justify-center gap-8">
        {posts.map((post) => (
          <li>
            <a href={`/projects/${post.id}`}>
              <h2 class="dark:text-accent text-primary text-center">
                {post.data.title}
              </h2>
            </a>
          </li>
        ))}
      </ul>
    )
  }
</MainLayout>
