---
import "../styles/global.css";
import BaseHead from "src/components/layouts/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../utils/consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-light dark:bg-dark">
    <main>
      <div class="bg-primary pb-2.5">
        <h1>🧑🏻‍💻 Hello Everyone!</h1>
      </div>
      <p class="text-dark dark:text-light text-center text-5xl">
        This site is still currently in maintenance, please check again next
        time!
      </p>
    </main>
  </body>
</html>
