---
import { SITE_DESCRIPTION, SITE_TITLE } from "../utils/consts";
import FeaturedCard from "src/components/blog/featuredCard.astro";
import MainLayout from "src/components/layouts/MainLayout.astro";
import Skills from "src/components/ui/skills.astro";
import Button from "../components/ui/button.svelte";
---

<MainLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main class="container m-4 mx-auto px-4">
    <!-- Hero Section -->
    <section class="py-16 text-center">
      <div class="mx-auto max-w-4xl">
        <h1
          class="text-primary dark:text-accent mb-6 text-5xl text-shadow-lg/5 md:text-6xl"
        >
          Turning complex data into intuitive solutions
        </h1>
        <p
          class="text-text text-shadow-accent dark:text-shadow-primary mb-8 text-xl text-shadow-md/30 md:text-2xl"
        >
          Emerging developer at the intersection of data science, software
          engineering, and UI design.
        </p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <Button
            client:load="svelte"
            link="#featured-projects"
            name="View My Work"
          />
        </div>
      </div>
    </section>
    <FeaturedCard type="projects" />

    <!-- About Preview -->
    <section class="py-16">
      <div class="container mx-auto max-w-6xl px-4">
        <div class="grid items-center gap-12 md:grid-cols-2">
          <div>
            <h2
              class="font-heading text-primary dark:text-accent mb-6 text-3xl text-shadow-lg/10 md:text-4xl"
            >
              Building Through Constant Learning
            </h2>
            <div class="text-text space-y-4">
              <p>
                My journey in software development started with curiosity and
                grew through making mistakes, learning from them, and building
                increasingly complex projects.
              </p>
              <p>
                From teaching myself Java Swing by creating a game inspired by
                Genshin Impact, leading a Flutter team through real-world
                development challenges, to analyzing political data with
                personal connections to Hong Kong, each of these projects has
                pushed me to grow both technically and professionally.
              </p>
              <p>
                I believe the best way to learn programming is by building
                things that matter, collaborating with others, and embracing the
                messy reality of real-world development.
              </p>
            </div>
            <div class="mt-6">
              <a
                href="/about"
                class="text-text hover:text-primary dark:hover:text-accent inline-flex items-center gap-2 font-semibold transition-colors"
              >
                More about me
                <svg
                  class="h-4 w-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- Skills/Technologies -->
          <div class="bg-secondary/50 dark:bg-secondary/10 rounded-4xl p-8">
            <h3
              class="font-heading text-primary dark:text-accent mb-6 text-3xl text-shadow-lg/10 md:text-4xl"
            >
              Technologies I Work With
            </h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <Skills
                title="Languages"
                items={[
                  "Python",
                  "R",
                  "JavaScript & TypeScript",
                  "Java",
                  "HTML/CSS",
                ]}
              />
              <Skills
                title="Frameworks & Tools"
                items={[
                  "Plotly",
                  "R Shiny",
                  "Astro & Svelte",
                  "Flutter",
                  "Java Swing",
                ]}
              />
              <Skills
                title="Data & Analysis"
                items={[
                  "Data Visualization",
                  "Statistical Analysis",
                  "API Integration",
                  "Database Design",
                ]}
              />
              <Skills
                title="Collaboration"
                items={[
                  "Git/GitHub",
                  "Team Leadership",
                  "Project Management",
                  "Code Review",
                ]}
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="dark:bg-secondary/5 bg-secondary/50 rounded-4xl py-16">
      <div class="container mx-auto max-w-4xl px-4 text-center">
        <h2
          class="font-heading text-primary dark:text-accent mb-6 text-3xl text-shadow-lg/10 md:text-4xl"
        >
          Let's Connect!
        </h2>
        <h3 class="text-text mx-auto mb-8 max-w-2xl text-lg">
          I'm always interested in new opportunities, cool challenging problems,
          and collaborative projects. Whether you're looking for a developer,
          want to discuss a technical challenge, or just want to chat about
          code, I'd love to hear from you.
        </h3>
        <div class="flex flex-wrap justify-center gap-4">
          <Button client:load="svelte" link="/contact" name="Get in Touch" />
        </div>
      </div>
    </section>
  </main>
</MainLayout>
