---
import BaseHead from "../components/common/BaseHead.astro";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import { SITE_DESCRIPTION } from "../utils/consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-light dark:bg-dark">
    <div class="site">
      <Header />
      <main class="container m-4 mx-auto snap-y motion-safe:snap-mandatory motion-reduce:snap-proximity px-4">
        <!-- Hero Section -->
        <section class="snap-center py-16 text-center">
          <div class="mx-auto max-w-4xl">
            <h2
              class="dark:text-secondary text-primary mb-6 text-5xl md:text-6xl"
            >
              Turning complex data into intuitive solutions
            </h2>
            <h2 class="text-dark dark:text-light mb-8 text-xl md:text-2xl font-sans">
              Emerging developer at the intersection of data science, software
              engineering, and UI design. Finding creative patterns in the most
              unexpected places: from personal financial literacy to the perfect
              running playlist.
            </h2>
            <div class="flex flex-col justify-center gap-4 sm:flex-row">
              <a
                href="#featured-projects"
                class="bg-accent text-dark hover:bg-accent/90 rounded-full px-8 py-3 font-semibold transition-colors"
              >
                View My Work
              </a>
            </div>
          </div>
        </section>

        <!-- Featured Projects Section -->
        <section id="featured-projects" class="snap-center py-16">
          <div class="mx-auto max-w-6xl">
            <h2
              class="dark:text-accent text-primary mb-12 text-center text-5xl"
            >
              Featured Projects
            </h2>

            <!-- RhythmRun Spotlight -->
            <div class="bg-secondary/20 mb-12 rounded-xl p-8">
              <div class="grid items-center gap-8 md:grid-cols-2">
                <div>
                  <h3
                    class="font-heading dark:text-accent text-primary mb-4 text-3xl"
                  >
                    RhythmRun
                  </h3>
                  <p class="text-dark dark:text-light mb-6 text-lg">
                    A mobile app that matches music to runners' pace and workout
                    intensity using Spotify's API and BPM analysis. Trying to
                    solve the age-old problem of finding the perfect workout
                    soundtrack.
                  </p>
                  <div class="mb-6">
                    <h4 class="text-dark dark:text-light mb-2 font-semibold">
                      Technical Highlights:
                    </h4>
                    <ul class="text-dark dark:text-light space-y-1">
